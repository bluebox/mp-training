<?import javafx.scene.layout.VBox?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.MainController"
      alignment="CENTER">

    <Button fx:id="btnAddBook" text="Add Book" onAction="#handleAddBook"/>
    <Button fx:id="btnAddMember" text="Add Member" onAction="#handleAddMember"/>
    <Button fx:id="btnIssueReturn" text="Issue/Return Book" onAction="#handleIssueReturn"/>
    <Button fx:id="btnReports" text="Reports" onAction="#handleReports"/>

</VBox>

