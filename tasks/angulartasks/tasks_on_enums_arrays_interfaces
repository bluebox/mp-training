// `practice on interface --- interface is like a skeleton of the body here we define the 
// structure(attributes) not its implementation`
interface IPerson { 
  firstName:string, 
  lastName:string, 
  sayHi: ()=>string 
} 
var customer:IPerson = { 
  firstName:"Tom",
  lastName:"Hanks", 
  sayHi: ():string =>{return "Hi there"} 
} 
   
  console.log(customer.sayHi())
  }
